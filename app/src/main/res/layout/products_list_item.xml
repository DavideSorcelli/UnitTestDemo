<?xml version="1.0" encoding="utf-8"?>

<!-- questo ConstraintLayout Ã¨ inutile, puoi usare direttamente
    la CardView come root del layout -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- hai usato layout_height=0dp (match constraint),
        ma questa card view non ha un bottom constraint,
        preferibile usare wrap content per evitare problemi futuri -->
    <!-- niente elevation e radius su una CardView ? :) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/product_item_cv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:elevation="@dimen/card_elev"
        app:cardCornerRadius="@dimen/card_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- non usare margin sugli elementi interni, piuttosto metti un paddingStart
                e un paddinEnd al LinearLayout che fa da contenitore.
                Alle view interne basta mettere poi un marginTop -->
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/spacing_sm"
                android:paddingEnd="@dimen/spacing_sm"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/product_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:textSize="@dimen/txtsize_sm"
                    tools:text="Product number" />

                <TextView
                    android:id="@+id/product_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:textSize="@dimen/txtsize_md"
                    tools:text="Product name" />

                <TextView
                    android:id="@+id/product_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:textSize="@dimen/txtsize_md"
                    tools:text="Product price" />

            </LinearLayout>

            <!-- mancava contentDescription, non serve a niente ma mettici qualcosa,
                cerca sempre di lasciare meno warning possibili nel codice -->
            <ImageView
                android:id="@+id/product_iv"
                android:layout_width="@dimen/products_list_icons_size_sm"
                android:layout_height="@dimen/products_list_icons_size_sm"
                android:layout_margin="@dimen/spacing_md"
                android:contentDescription="@string/app_name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_beer" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>