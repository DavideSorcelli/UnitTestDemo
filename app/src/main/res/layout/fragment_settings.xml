<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewmodels.SettingsFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_sm">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/spacing_md">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unit of Measure"
                android:textAlignment="center"
                android:textSize="@dimen/txtsize_lg" />

            <RadioGroup
                android:id="@+id/rb_unit_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_unit_british"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="British"
                    android:textSize="@dimen/txtsize_md" />

                <RadioButton
                    android:id="@+id/rb_unit_euro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="European"
                    android:textSize="@dimen/txtsize_md" />

                <RadioButton
                    android:id="@+id/rb_unit_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="Default"
                    android:textSize="@dimen/txtsize_md" />
            </RadioGroup>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</FrameLayout>